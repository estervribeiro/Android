<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".agendacontatos.CadastroContatoActivity"
    android:orientation="vertical"
    android:layout_margin="24dp"
    >

    <EditText
        android:id="@+id/txt_nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome do Contato"
        android:inputType="text"
        />

    <EditText
        android:id="@+id/txt_logradouro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Logradouro"
        android:inputType="text"
        />

    <EditText
        android:id="@+id/txt_telefone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Telefone do Contato"
        android:inputType="text"
        />

    <EditText
        android:id="@+id/txt_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email do Contato"
        android:inputType="text"
        />

    <EditText
        android:id="@+id/txt_enderecoLinkedin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Linkedin do Contato"
        android:inputType="text"
        />



</LinearLayout>